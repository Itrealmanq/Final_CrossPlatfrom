<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniprojectCross.Page.LoginPage"
             Title="ระบบลงทะเบียนเรียน">
    <Grid>
        <!-- Background with yellow and gray gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF880E00" Offset="0.0" />
                    
                    <GradientStop Color="#FFC47900" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
        
        <!-- Decorative elements -->
        <BoxView Color="#FF880E00" Opacity="0.3"
                 HeightRequest="200" WidthRequest="200"
                 HorizontalOptions="End" VerticalOptions="Start"
                 CornerRadius="100" Margin="-50,-50,0,0" />
                 
        <BoxView Color="#666666" Opacity="0.4"
                 HeightRequest="150" WidthRequest="150"
                 HorizontalOptions="Start" VerticalOptions="End"
                 CornerRadius="75" Margin="-30,0,0,-30" />
                 
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
                <!-- Compact Login Form with yellow-gray theme -->
                <Frame BorderColor="#CCCCCC" 
                       CornerRadius="15" 
                       Padding="20" 
                       HasShadow="True" 
                       BackgroundColor="#FFFFEE"
                       Opacity="0.95"
                       WidthRequest="750"
                       HorizontalOptions="Center"
                       Margin="0,20,0,20">
                    <VerticalStackLayout Spacing="12">
                        <!-- Logo and header -->
                        <Image Source="app_logo.png" 
                               HeightRequest="120" 
                               HorizontalOptions="Center" />
                               
                        <Label Text="ระบบลงทะเบียนเรียนนิสิต"
                               FontSize="22"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#333333" />
                               
                        <Label Text="กรุณาเข้าสู่ระบบ"
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,0,0,8" />
                               
                        <!-- Email Field -->
                        <Label Text="อีเมล" 
                               FontSize="14" 
                               TextColor="#444444" 
                               FontAttributes="Bold"
                               Margin="0,0,0,-5" />
                               
                        <Frame BorderColor="#DDDDDD" 
                               Padding="12,0" 
                               HasShadow="False" 
                               CornerRadius="8" 
                               BackgroundColor="#FFFEF5"
                               HeightRequest="45">
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="example@email.com"
                                   PlaceholderColor="#AAAAAA"
                                   TextColor="#333333"
                                   Keyboard="Email"
                                   ReturnType="Next"
                                   VerticalOptions="Center"
                                   FontSize="14" />
                        </Frame>

                        <!-- Password Field -->
                        <Label Text="รหัสผ่าน" 
                               FontSize="14" 
                               TextColor="#444444" 
                               FontAttributes="Bold"
                               Margin="0,0,0,-5" />
                               
                        <Frame BorderColor="#DDDDDD" 
                               Padding="12,0" 
                               HasShadow="False" 
                               CornerRadius="8" 
                               BackgroundColor="#FFFEF5"
                               HeightRequest="45">
                            <Entry x:Name="PasswordEntry" 
                                   IsPassword="True" 
                                   Placeholder="กรอกรหัสผ่าน"
                                   PlaceholderColor="#AAAAAA"
                                   TextColor="#333333"
                                   ReturnType="Done"
                                   VerticalOptions="Center"
                                   FontSize="14" />
                        </Frame>

                       
                      

                        <!-- Login Button with university colors -->
                        <Button x:Name="LoginButton" 
                                Text="เข้าสู่ระบบ" 
                                BackgroundColor="#FF29D307"
                                TextColor="#333333"
                                FontAttributes="Bold"
                                Margin="0,8,0,5"
                                HeightRequest="46"
                                CornerRadius="23" />

                        <!-- Forgot Password -->
                        <Label Text="ลืมรหัสผ่าน?" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               FontSize="14"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer x:Name="ForgotPasswordTap" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Version info -->
                <Label Text="Version 1.0.0" 
                       HorizontalOptions="Center" 
                       TextColor="#444444" 
                       FontSize="12" 
                       Opacity="0.8" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>